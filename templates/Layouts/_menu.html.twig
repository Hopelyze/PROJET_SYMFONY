{% block menu %}
    <div class="menu">
    {% if app.user %}
        <a href="{{ path('main') }}">Accueil</a>
        <a href="#account">Gérer son profil</a>
        <a href="{{ path('security_logout') }}">Déconnexion</a>
        <a href="https://fr.wikipedia.org/wiki/Pong">Lien vers un site extérieur</a>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('product_list') }}">Liste des produits</a>
            <a href="{{ path('product_cart') }}">Gérer le panier ({{ cartCount }})</a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}  
            <a href="{{ path('product_create') }}">Créer un produit</a> 
            <a href="#account">Gérer les utilisateurs</a>
        {% endif %}
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="#account">Gérer les administrateurs</a>
        {% endif %}
    {% else %}
        <a href="{{ path('main') }}">Accueil</a>
        <a href="{{ path('security_login') }}">Connexion</a>
        <a href="#account">Créer un compte</a>
    {% endif %} 
    </div>
{% endblock %}

